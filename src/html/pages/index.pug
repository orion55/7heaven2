extends ../main.layout.pug

block content
    .slider
        ul#slider-main.slider__list
            - var n = 1;
            while n < 4
                li.slider__item
                    img.slider__image(src="#" alt="slider0" + n)
                    .slider__inner.promo
                        h2.promo__title Lorem ipsum dolor sit amet
                        img.promo__pic(src="#" alt="cavalier-slider")
                        .promo__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                        a.btn.btn--animate(href="#") Read more
                - n++;

    .whatme
        .whatme__wrap
            h2.whatme__title What We Wo
            .whatme__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
            .whatme__item.chart
                .chart__circle.chart__circle--green
                .chart__percent 81
                .chart__title Unique design
                .chart__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy.
            .whatme__item.chart
                .chart__circle.chart__circle--red
                .chart__percent 40
                .chart__title Site Template
                .chart__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy.
            .whatme__item.chart
                .chart__circle.chart__circle--blue
                .chart__percent 60
                .chart__title Wp Theme
                .chart__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy.

    .services
        .services__wrap
            h2.services__title Services
            .services__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
            .services__item.service
            - var titles = ['Unique design', 'Site Template', 'Wp Theme', 'eCommerce'];
            - var n = 1;
                each val in titles
                    .service__image
                        .service__picture(src="#" alt="pict0" + n)
                        .service__title= val
                        .service__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam.
                    - n++;

    .works
        .works__wrap
            h2.works__title Recent work
            nav.nav-works
                ul.nav-works__list
                    - var links = ["All", "Web Design", "Site Template", "Wordpress Theme"];
                        each val in links
                            li.nav-works__item
                                a.nav-works__link(href="#")= val
        .works__box
            - var number = 1;
            - for (var i = 1; i <= 2; i++) {
            .works__row
                - for (var j = 1; j <= 3; j++) {
                .work
                    a.work__link(href="#") Link
                    .work__photo
                        img.work__image(src="#" alt="work0" + number)
                    .work__popup.popup
                        img.popup_image(src="#" alt="#")
                        .popup__title Project Title Here
                        a.btn(href="#") View Work
                - number++;
                - }
            - }

        .works__control.control.control--left
            a.control__link(href="#") Left

        .control__dots
            - var n = 1;
            while n < 5
                a.control__dot(href="#")= n++

        .works__control.control.control--right
            a.control__link(href="#") Right

    .tweets
        .tweets__wrap
            h2.tweets__title New Tweets
            ul#slider-tweets.tweets__list
                - var n = 1;
                while n < 5
                    li.tweets__item.tweet
                        .tweet__text Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna.
                        .tweet__author themefire
                        .tweet__date 35 seconds ago
                    - n++;
            a.btn.btn--tweet(href="#") Follow Us
            .control__dots.control__dots--inverse
                - var n = 1;
                while n < 5
                    a.control__dot(href="#")= n++

    .posts
        .posts__wrap
            h2.posts__title Recent posts
            .posts__desc Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
            - var category_obj = [{number:10, category: "Web Design"}, {number:167, category: "Video"}, {number:55, category: "Photo"}];
            each val in category_obj
                .posts__item.post
                    .post__picture
                        img.post__image(src="#" alt="#")
                    .post__square square
                    .post__title Lorem ipsum dolor sit amet
                    .post__info
                        span.post__text by
                        span.post__author John Doe
                        span.post__text /
                        span.date January 25, 2014
                    hr.post__hr
                    .post__excerpt Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                    .post__footer
                        .post_comment
                            i.fa.fa-comments(aria-hidden="true")
                            span.post__comm-number= val.number
                            span.post__foo-text Comments
                        .post__category
                            i.fa.fa-lightbulb-o(aria-hidden="true")
                            span.post__cat-name= val.category
                            span.post__foo-text Category

            .posts__control.control.control--left
                a.control__link(href="#") Left

            .control__dots
                - var n = 1;
                while n < 5
                    a.control__dot(href="#")= n++

            .posts__control.control.control--right
                a.control__link(href="#") Right